{
    "bot": {
        "prefix": "!!",
        "commandDir": "commands"
    },
    "embeds": {
        "error": {
            "title": ":x: Oh no!",
            "description": "Something went wrong with the command. Please notify Mount2010. The command might not work for now.",
            "color": "{{red}}"
        },
        "notEnoughArguments": {
            "title": ":information_source: Not enough arguments",
            "description": "Usage: {{{usage}}}",
            "color": "{{primary}}"
        },
        "ping": {
            "title": "Pong!",
            "description": "Ping pong!",
            "color": "{{primary}}"
        },
        "success": {
            "title": ":ok_hand: Success!", 
            "description": "All done!",
            "color": "{{green}}"
        },
        "noPermission": {
            "title": ":x: Permission denied",
            "description": "You do not have permission to run this command.",
            "color": "{{red}}"
        },
        "helppage": {
            "title": ":information_source: Command index",
            "color": "{{primary}}"
        },
        "suggest": {
            "error": {
                "inherits": "embeds.error",
                "description": "Something went wrong while sending your suggestion. Please notify Mount2010."
            },
            "success": {
                "inherits": "embeds.success",
                "description": "If you want to edit your suggestion, please do `!!suggestion.`"
            }
        },
        "suggestion": {
            "default": {
                "inherits": "embeds.helppage",
                "description": "Suggestion management:\n{{! Need triple brackets for non escaping}}{{{index}}}"
            }
        },
        "user": {
            "default": {
                "inherits": "embeds.helppage",
                "description": "User management:\n`setAdmin`: Makes a user an admin."
            },
            "makeAdminSuccess": {
                "inherits": "embeds.success",
                "description": "Successfully made {{user}} an admin."
            }
        }
    },
    "view": {
        "colors": {
            "primary": "0xffffff",
            "green": "0x00ff00",
            "yellow": "0xffff00",
            "red": "0xff0000"
        }
    }
}